@model IP_Manager.ViewModels.subnetListViewModel

@{
    ViewData["Tittle"] = "Subnets";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-9 content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Networks</th>
                        <th>Subnet Mask</th>
                        <th>Date Created</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.subnetList.Any())
                    {
                        foreach (var item in Model.subnetList)
                        {
                            <tr>
                                <td>@item.IPV4 </td>
                                <td>@item.Mask</td>
                                <td>@item.createdAt</td>

                            </tr>

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Data Available</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div id="NavBar" class="col-md-3 sidebar">
            <form asp-action="subnetList" asp-controller="Subnets" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3 mt-3">
                    <label for="IPV4String" class="form-label">IPV4: </label>
                    <input type="text" asp-for="newSubnet.IPV4String" class="form-control" id="IPV4" maxlength="15" placeholder="e.g. 192.168.0.1" name="IPV4String" />
                </div>

                <div class="mb-3>
                    <label for="maskString" class="form-label">Mask: </label>
                    <input type="text" asp-for="newSubnet.maskString" class="form-control" id="mask" maxlength="15" placeholder="e.g. 255.255.255.0" name="maskString" />
                </div>


                <button type="submit" class="btn btn-primary mt-3">Save</button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function formatIpInput(input) {
            input.addEventListener('input', function () {
                let value = input.value.replace(/[^\d]/g, ''); //only digits
                let newVal = '';
                for (let i = 0; i < value.length && i < 12; i += 3) {
                    if (newVal.length > 0) newVal += '.';
                    newVal += value.substr(i, 3);
                }
                input.value = newVal;
            });
        }
        document.addEventListener('DOMContentLoaded', function () {
            formatIpInput(document.getElementById('IPV4'));
            formatIpInput(document.getElementById('mask'));
        });
    </script>
}